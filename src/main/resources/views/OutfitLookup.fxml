<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.layout.VBox?>
<VBox alignment="CENTER_LEFT" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.application.lookups.OutfitLookupController">
    <Label text="%outfitGeneralStats" style="-fx-font-size: 32">
        <VBox.margin>
            <Insets left="10"/>
        </VBox.margin>
    </Label>
    <HBox alignment="CENTER_LEFT">
        <Label text="%outfitTagLabel">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Label>
        <TextField fx:id="outfitTag" minWidth="100">
            <HBox.margin>
                <Insets left="5"/>
            </HBox.margin>
        </TextField>
        <Button text="%search" prefWidth="100" onAction="#search">
            <HBox.margin>
                <Insets left="10"/>
            </HBox.margin>
        </Button>
    </HBox>
</VBox>
